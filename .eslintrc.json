{
  "extends": ["next/core-web-vitals", "prettier"],
  "rules": {
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "no-restricted-imports": [
      "error",
      {
        "paths": ["date-fns", "react-hook-form", "@hookform/resolvers"],
        "patterns": [
          "@hookform/resolvers/*",
          "components/auth/*",
          "components/data/*",
          "components/form/*",
          "components/layout/*",
          "components/modal/*",
          "components/navigation/*",
          "backend/middlewares",
          "backend/types"
        ]
      }
    ]
  }
}
